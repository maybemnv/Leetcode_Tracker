# LeetCode Tracker Environment Variables

# Copy this file to .env and fill in your actual values

# LeetCode Configuration
LEETCODE_USERNAME=your_username_here
LEETCODE_SESSION_ID=your_session_id_here  # Optional: for private accounts
LEETCODE_CSRF_TOKEN=your_csrf_token_here  # Optional: for private accounts

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
# Use ONE of the following two options:
GOOGLE_CREDENTIALS_PATH=path/to/service_account.json  # Path to service account JSON file
# OR
GOOGLE_CREDENTIALS_JSON={"type": "service_account", "project_id": "...", ...}  # Service account JSON content

# Synchronization Configuration
SYNC_INTERVAL=daily  # Options: hourly, daily, weekly
LOG_LEVEL=INFO       # Options: DEBUG, INFO, WARNING, ERROR
MAX_RETRIES=3        # Maximum retry attempts for API calls
TIMEOUT=30           # Request timeout in seconds

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging Configuration (Optional)
LOG_FILE=logs/leetcode_tracker.log  # Path to log file

# Example values (DO NOT USE THESE IN PRODUCTION):
# LEETCODE_USERNAME=johndoe
# GOOGLE_SHEETS_ID=1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgvE2upms
# GOOGLE_CREDENTIALS_JSON={"type": "service_account", "project_id": "my-project", ...}
